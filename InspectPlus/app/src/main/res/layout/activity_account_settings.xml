<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="inspectplus.dpwgroup.com.inspectplus.AccountSettingsActivity">


    <TextView
        android:id="@+id/tv_account_settings_title"
        android:text="@string/title_account_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/largeFont"/>

    <LinearLayout
        android:id="@+id/layout_userDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_account_settings_title"
        android:layout_marginTop="@dimen/marginTop_16dp">

        <TextView
            android:id="@+id/lbl_name"
            android:text="@string/tv_lbl_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

           />
        <TextView
            android:id="@+id/tv_name"
            android:text="@string/tv_lbl_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />
        <TextView
            android:id="@+id/lbl_address"
            android:text="Address:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_address"
            android:text="Address:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

   </LinearLayout>

</RelativeLayout>
